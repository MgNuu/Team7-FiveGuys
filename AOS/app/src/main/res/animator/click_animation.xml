<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <set>
            <objectAnimator android:propertyName="scaleX" android:valueTo="0.85" android:duration="@android:integer/config_shortAnimTime"/>
            <objectAnimator android:propertyName="scaleY" android:valueTo="0.85" android:duration="@android:integer/config_shortAnimTime"/>
        </set>
    </item>
    <item>
        <set>
            <objectAnimator android:propertyName="scaleX" android:valueTo="1" android:duration="@android:integer/config_shortAnimTime"/>
            <objectAnimator android:propertyName="scaleY" android:valueTo="1" android:duration="@android:integer/config_shortAnimTime"/>
        </set>
    </item>
</selector>